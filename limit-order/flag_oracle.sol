pragma solidity ^0.8.0;

contract FlagOracle {
    address public owner;
    mapping(string => bool) map; // uint256 is the order ID (generated by us only)

    event DataUpdated(string orderID, bool status);

    constructor() {
        owner = msg.sender;
    }

    function updateData(string calldata orderID, bool status) public {
        require(msg.sender == owner, "Only oracle updater can post data");
        map[orderID] = status;
        emit DataUpdated(orderID, status);
    }

    function getData(string calldata orderID) external view returns (bool) {
        return map[orderID];
    }
}

